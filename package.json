{
	"name": "gymrat-api",
	"version": "0.0.1",
	"description": "",
	"author": "JosepRivera",
	"private": true,
	"license": "MIT",
	"scripts": {
		"start:dev": "nest start --watch",
		"build": "nest build",
		"start:prod": "node dist/main",

		"lint": "biome check --write ./src",
		"format": "biome format --write ./src",

		"test": "jest",

		"dev": "docker compose -f docker-compose.dev.yml up",
		"dev:build": "docker compose -f docker-compose.dev.yml up --build",
		"dev:down": "docker compose -f docker-compose.dev.yml down",
		"dev:logs": "docker compose -f docker-compose.dev.yml logs -f app-dev",

		"prod": "docker compose up",
		"prod:build": "docker compose up --build",
		"prod:migrate": "docker exec gymrat-app pnpm prisma migrate deploy",
		"prod:down": "docker compose down",

		"db:migrate": "docker exec gymrat-app-dev pnpm prisma migrate dev",
		"db:studio": "docker exec gymrat-app-dev pnpm prisma studio",
		"db:seed": "docker exec gymrat-app-dev tsx prisma/seed.ts",

		"shell": "docker exec -it gymrat-app-dev sh",
		"clean": "docker compose -f docker-compose.dev.yml down -v"
	},
	"dependencies": {
		"@nestjs/common": "^11.1.13",
		"@nestjs/config": "^4.0.3",
		"@nestjs/core": "^11.1.13",
		"@nestjs/platform-express": "^11.1.13",
		"@nestjs/swagger": "^11.2.6",
		"@prisma/adapter-pg": "^7.3.0",
		"@prisma/client": "^7.3.0",
		"bcrypt": "^6.0.0",
		"helmet": "^8.1.0",
		"jose": "^6.1.3",
		"ms": "^2.1.3",
		"nestjs-zod": "^5.1.1",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.2",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@nestjs/cli": "^11.0.16",
		"@nestjs/schematics": "^11.0.9",
		"@nestjs/testing": "^11.1.13",
		"@tsconfig/node24": "^24.0.4",
		"@types/bcrypt": "^6.0.0",
		"@types/express": "^5.0.6",
		"@types/jest": "^30.0.0",
		"@types/ms": "^2.1.0",
		"@types/node": "^24.10.13",
		"@types/supertest": "^6.0.3",
		"jest": "^30.2.0",
		"prisma": "^7.3.0",
		"supertest": "^7.2.2",
		"ts-jest": "^29.4.6",
		"ts-loader": "^9.5.4",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
